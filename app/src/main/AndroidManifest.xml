<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firelord.weathering">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivity" />
        <activity
            android:name=".weatherUi.Rain"
            android:screenOrientation="portrait"
            android:theme="@style/weather" />
        <activity
            android:name=".weatherUi.Snow"
            android:screenOrientation="portrait"
            android:theme="@style/weather" />
        <activity
            android:name=".weatherUi.Sunny"
            android:screenOrientation="portrait"
            android:theme="@style/weather" />
        <activity
            android:name=".info.Info"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/weather"/>
        <activity
            android:name=".info.Contributors"
            android:screenOrientation="portrait" />
        <activity
            android:name=".info.Library"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.Location"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.Settings"
            android:screenOrientation="portrait"
            android:theme="@style/weather"/>
    </application>
</manifest>