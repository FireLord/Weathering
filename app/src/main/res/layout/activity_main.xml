<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSunnyDark"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="46dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="366dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="606dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSideMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="354dp" />

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="412dp"
        android:layout_height="411dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sunny" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_sunny_map"
        android:drawablePadding="10dp"
        android:hint="Location"
        android:inputType="textPersonName"
        android:textColor="@color/colorSunnyLight"
        android:textColorHint="@color/colorSunnyAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_sunny_temp"
        android:maxLines="1"
        android:text="--"
        android:textColor="@color/colorSunnyLight"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineSideMiddle"
        app:layout_constraintTop_toTopOf="@+id/guidelineTopMiddle"
        tools:text="40Â°C" />


    <TextView
        android:id="@+id/tvRain"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_sunny_rain"
        android:drawablePadding="10dp"
        android:text="--"
        android:textColor="@color/colorSunnyLight"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineSideMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tvTemp" />

    <TextView
        android:id="@+id/tvWind"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:drawableStart="@drawable/ic_sunny_wind"
        android:drawablePadding="10dp"
        android:text="--"
        android:textColor="@color/colorSunnyLight"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineSideMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tvHumidity"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:drawableStart="@drawable/ic_sunny_hum"
        android:drawablePadding="10dp"
        android:text="--"
        android:textColor="@color/colorSunnyLight"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineSideMiddle"
        app:layout_constraintTop_toBottomOf="@+id/tvRain" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:text="--"
        android:textColor="@color/colorSunnyLight"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/buReport" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textColor="@color/colorSunnyLight"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tvDay" />

    <Button
        android:id="@+id/buReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:maxLines="1"
        android:text="Get Weather"
        android:textColor="@color/colorSunnyDark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineTopMiddle" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTopMiddle"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft" />
</androidx.constraintlayout.widget.ConstraintLayout>