<resources>
    <!-- Base application theme. -->
    <style name="Sunny" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSunnyLight</item>
        <item name="colorPrimaryDark">@color/colorSunnyLight</item>
        <item name="colorAccent">@color/colorSunnyLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="toolbarSunny" parent="Sunny">
        <item name="android:textColorPrimary">@color/colorSunnyDark</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Rain" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRainLight</item>
        <item name="colorPrimaryDark">@color/colorRainLight</item>
        <item name="colorAccent">@color/colorRainLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="toolbarRain" parent="Rain">
        <item name="android:textColorPrimary">@color/colorRainDark</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Snow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSnowLight</item>
        <item name="colorPrimaryDark">@color/colorSnowLight</item>
        <item name="colorAccent">@color/colorSnowLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="toolbarSnow" parent="Snow">
        <item name="android:textColorPrimary">@color/colorSnowDark</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="MainActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGirlDark</item>
        <item name="colorPrimaryDark">@color/girlWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/logoBg</item>
        <item name="android:windowBackground">@drawable/splash_activity</item>
    </style>
</resources>