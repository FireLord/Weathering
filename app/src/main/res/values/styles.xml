<resources>
    <style name="Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/girlBlack</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Weather.MainActivity" parent="Weather">
        <item name="colorPrimary">@color/colorGirlDark</item>
        <item name="colorPrimaryDark">@color/girlWhite</item>
    </style>

    <style name="Weather.Splash" parent="Weather">
        <item name="android:statusBarColor">@color/logoBg</item>
        <item name="colorPrimaryDark">@color/logoBg</item>
        <item name="android:windowBackground">@drawable/splash_activity</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>